<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Complaints</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.8);
        }
        .modal-content {
            margin: auto;
            display: block;
            max-width: 80%;
            max-height: 80%;
            margin-top: 5%;
        }
        .close {
            position: absolute;
            top: 15px;
            right: 35px;
            color: #f1f1f1;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen p-6">
    <div class="max-w-4xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">
                <i class="fas fa-list mr-2"></i> My Reported Issues
            </h1>
            <a href="/Teacher_dashboard" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
            </a>
        </div>
        
        <% if (complaints.length === 0) { %>
            <div class="bg-white p-8 rounded-lg shadow text-center">
                <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
                <p class="text-gray-500">You haven't reported any issues yet.</p>
                <a href="/Teacher_dashboard" class="inline-block mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                    Report an Issue
                </a>
            </div>
        <% } else { %>
            <div class="grid gap-4">
                <% complaints.forEach(complaint => { %>
                    <div class="bg-white p-4 rounded-lg shadow">
                        <div class="flex justify-between items-start">
                            <div>
                                <h2 class="font-semibold text-lg"><%= complaint.category %></h2>
                                <p class="text-gray-600">Room: <%= complaint.roomNumber %></p>
                                <p class="text-gray-600">Reported: <%= complaint.createdAt.toLocaleDateString() %></p>
                                <p class="text-gray-600">Priority: 
                                    <span class="px-2 py-1 rounded-full text-xs font-semibold 
                                        <% if (complaint.priority === 'Low') { %>bg-green-100 text-green-800<% } %>
                                        <% if (complaint.priority === 'Medium') { %>bg-yellow-100 text-yellow-800<% } %>
                                        <% if (complaint.priority === 'High') { %>bg-orange-100 text-orange-800<% } %>
                                        <% if (complaint.priority === 'Critical') { %>bg-red-100 text-red-800<% } %>">
                                        <%= complaint.priority %>
                                    </span>
                                </p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-semibold 
                                <% if (complaint.status === 'Pending') { %>bg-yellow-100 text-yellow-800<% } %>
                                <% if (complaint.status === 'In Progress') { %>bg-blue-100 text-blue-800<% } %>
                                <% if (complaint.status === 'Resolved') { %>bg-green-100 text-green-800<% } %>
                                <% if (complaint.status === 'Closed') { %>bg-gray-100 text-gray-800<% } %>">
                                <%= complaint.status %>
                            </span>
                        </div>
                        
                        <p class="mt-3 text-gray-700"><%= complaint.description %></p>
                        
                        <% if (complaint.images && complaint.images.length > 0) { %>
                            <div class="mt-3">
                                <p class="font-semibold mb-2">Attached Images:</p>
                                <div class="flex flex-wrap gap-2">
                                    <% complaint.images.forEach((image, index) => { %>
                                        <img src="/complaint-image/<%= complaint._id %>/<%= index %>" 
                                             alt="<%= image.originalName || 'Complaint image' %>" 
                                             class="w-20 h-20 object-cover rounded border cursor-pointer"
                                             onclick="openModal(this.src, '<%= image.originalName || 'Complaint image' %>')">
                                    <% }) %>
                                </div>
                            </div>
                        <% } %>
                        
                        <div class="mt-3 pt-3 border-t border-gray-200">
                            <p class="text-sm text-gray-500">
                                <i class="fas fa-info-circle mr-1"></i>
                                Complaint ID: <%= complaint._id %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="modal">
        <span class="close" onclick="closeModal()">&times;</span>
        <img class="modal-content" id="modalImage">
        <div id="caption" class="text-white text-center mt-2 text-lg"></div>
    </div>

    <script>
        // Get the modal
        const modal = document.getElementById("imageModal");
        const modalImg = document.getElementById("modalImage");
        const captionText = document.getElementById("caption");
        
        // Open the modal
        function openModal(src, alt) {
            modal.style.display = "block";
            modalImg.src = src;
            captionText.innerHTML = alt;
        }
        
        // Close the modal
        function closeModal() {
            modal.style.display = "none";
        }
        
        // Close modal when clicking outside of image
        modal.addEventListener('click', function(event) {
            if (event.target === modal) {
                closeModal();
            }
        });
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                closeModal();
            }
        });
    </script>
</body>
</html>