<!-- register_batch_coordinator.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batch Coordinator Registration</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-96">
        <h2 class="text-2xl font-bold text-gray-800 text-center">Register as Batch Coordinator</h2>
        
        <!-- Normal Registration Form -->
        <form action="/register_batch_coordinator" method="POST" class="mt-4">
            <input type="text" name="name" placeholder="Full Name" class="w-full p-2 border rounded mb-3" required>
            <input type="email" name="email" placeholder="Email" class="w-full p-2 border rounded mb-3" required>
            <input type="password" name="password" placeholder="Password" class="w-full p-2 border rounded mb-3" required>
            <button type="submit" class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Register</button>
        </form>

        <!-- Divider -->
        <div class="flex items-center my-4">
            <hr class="flex-grow border-t border-gray-300">
            <span class="mx-2 text-gray-500">OR</span>
            <hr class="flex-grow border-t border-gray-300">
        </div>

        <!-- Google Sign-In Button -->
        <a href="/auth/google/bc" class="w-full inline-flex items-center justify-center bg-red-500 text-white p-2 rounded hover:bg-red-600">
            <img src="https://img.icons8.com/color/24/google-logo.png" alt="Google logo" class="mr-2">
            Sign up with Google
        </a>

        <p class="text-center text-sm text-gray-600 mt-4">
            Already have an account? 
            <a href="/login_bc" class="text-blue-500 font-medium hover:underline">Login here</a>
        </p>
    </div>
</body>
</html>
