<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard | Room Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
        }
        
        .dashboard-card {
            transition: all 0.3s ease;
            border-left: 4px solid;
        }
        
        .dashboard-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        
        .sidebar-item {
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }
        
        .sidebar-item:hover {
            border-left-color: #3b82f6;
            background-color: #f8fafc;
        }
        
        .status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
        }
        
        .room-card {
            transition: all 0.2s ease;
        }
        
        .room-card:hover {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        
        .scanner-modal {
            transition: opacity 0.3s ease;
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <i class="fas fa-chalkboard-teacher text-2xl"></i>
                <h1 class="text-xl font-bold">Teacher Dashboard</h1>
            </div>
            <div class="flex items-center space-x-4">
                <% if (currentTeacher && currentTeacher.name) { %>
                    <span class="text-sm bg-blue-500 px-3 py-1 rounded-full">
                        <i class="fas fa-user-circle mr-1"></i> <%= currentTeacher.name %>
                    </span>
                <% } else if (currentTeacher && currentTeacher.email) { %>
                    <span class="text-sm bg-blue-500 px-3 py-1 rounded-full">
                        <i class="fas fa-user-circle mr-1"></i> <%= currentTeacher.email %>
                    </span>
                <% } else { %>
                    <span class="text-sm bg-blue-500 px-3 py-1 rounded-full">
                        <i class="fas fa-user-circle mr-1"></i> Teacher
                    </span>
                <% } %>
                <a href="/logout" class="text-sm bg-red-500 hover:bg-red-600 px-3 py-1 rounded-full transition-colors">
                    <i class="fas fa-sign-out-alt mr-1"></i> Logout
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="flex h-screen pt-2">
        <!-- Left Sidebar -->
        <aside class="w-64 bg-white shadow-lg p-5">
            <div class="mb-6">
                <h2 class="text-lg font-semibold text-gray-700 mb-3 flex items-center">
                    <i class="fas fa-tachometer-alt mr-2 text-blue-500"></i> Dashboard
                </h2>
                <div class="space-y-2">
                    <div class="sidebar-item p-3 rounded-lg cursor-pointer" onclick="location.href='/Teacher_dashboard'">
                        <i class="fas fa-door-open mr-2 text-blue-500"></i>
                        <span>Room Booking</span>
                    </div>
                    <div class="sidebar-item p-3 rounded-lg cursor-pointer" onclick="location.href='/attendClassroom'">
                        <i class="fas fa-chalkboard mr-2 text-green-500"></i>
                        <span>Attend Class</span>
                    </div>
                    <div class="sidebar-item p-3 rounded-lg cursor-pointer" onclick="location.href='/my-complaints'">
                        <i class="fas fa-exclamation-circle mr-2 text-red-500"></i>
                        <span>My Complaints</span>
                    </div>
                </div>
            </div>
            
            <div class="mb-6">
                <h2 class="text-lg font-semibold text-gray-700 mb-3 flex items-center">
                    <i class="fas fa-qrcode mr-2 text-purple-500"></i> Quick Actions
                </h2>
                <div class="space-y-2">
                    <button class="w-full bg-purple-500 text-white py-2.5 rounded-lg hover:bg-purple-600 flex items-center justify-center transition-colors" onclick="openScanner()">
                        <i class="fas fa-camera mr-2"></i> Scan QR Code
                    </button>
                    <button class="w-full bg-indigo-500 text-white py-2.5 rounded-lg hover:bg-indigo-600 flex items-center justify-center transition-colors" onclick="location.href='/Teacher_dashboard'">
                        <i class="fas fa-plus-circle mr-2"></i> New Booking
                    </button>
                </div>
            </div>
            
            <div class="mt-8 p-4 bg-blue-50 rounded-lg border border-blue-100">
                <h3 class="font-medium text-blue-800 mb-2 flex items-center">
                    <i class="fas fa-info-circle mr-1"></i> Need Help?
                </h3>
                <p class="text-sm text-blue-600">
                    Contact admin for room availability or technical issues.
                </p>
            </div>
        </aside>

        <!-- Right Content -->
        <main class="flex-1 p-6 overflow-y-auto">
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-800">Classroom Management</h2>
                <p class="text-gray-600">Manage your room bookings and ongoing classes</p>
            </div>
            
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-8">
                <div class="dashboard-card bg-white p-5 rounded-lg shadow-sm border-l-blue-500">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm text-gray-500">Booked Rooms</p>
                            <h3 class="text-2xl font-bold text-gray-800"><%= bookedRooms.length %></h3>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-full">
                            <i class="fas fa-door-closed text-blue-500 text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="dashboard-card bg-white p-5 rounded-lg shadow-sm border-l-green-500">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm text-gray-500">Active Classes</p>
                            <h3 class="text-2xl font-bold text-gray-800"><%= attendingRooms.length %></h3>
                        </div>
                        <div class="bg-green-100 p-3 rounded-full">
                            <i class="fas fa-chalkboard-teacher text-green-500 text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="dashboard-card bg-white p-5 rounded-lg shadow-sm border-l-red-500">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm text-gray-500">Pending Complaints</p>
                            <h3 class="text-2xl font-bold text-gray-800">0</h3>
                        </div>
                        <div class="bg-red-100 p-3 rounded-full">
                            <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Rooms Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Booked Rooms -->
                <div class="bg-white p-5 rounded-lg shadow-sm">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-calendar-check mr-2 text-blue-500"></i> Booked Rooms
                        </h3>
                        <span class="status-badge bg-blue-100 text-blue-800"><%= bookedRooms.length %> rooms</span>
                    </div>
                    
                    <div class="space-y-3">
                        <% if (bookedRooms.length === 0) { %>
                            <div class="text-center py-8 text-gray-500">
                                <i class="fas fa-door-open text-3xl mb-2"></i>
                                <p>No rooms booked yet</p>
                                <button class="mt-2 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" 
                                        onclick="location.href='/Teacher_dashboard'">
                                    Book a Room
                                </button>
                            </div>
                        <% } else { %>
                            <% bookedRooms.forEach(room => { %>
                                <div class="room-card p-3 border rounded-lg hover:border-blue-300">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <h4 class="font-medium text-gray-800">Room <%= room.room_Number %></h4>
                                            <p class="text-sm text-gray-600">
                                                <% if (room.floor_id && room.floor_id.building_id) { %>
                                                    Floor <%= room.floor_id.floor_Number %>, 
                                                    <%= room.floor_id.building_id.building_name %>
                                                <% } else { %>
                                                    Building details not available
                                                <% } %>
                                            </p>
                                        </div>
                                        <div class="flex space-x-2">
                                            <button class="text-blue-500 hover:text-blue-700" 
                                                onclick="location.href='/complaint/<%= room._id %>'"
                                                title="Report Issue">
                                                <i class="fas fa-exclamation-circle"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <!-- Attending Rooms -->
                <div class="bg-white p-5 rounded-lg shadow-sm">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-chalkboard mr-2 text-green-500"></i> Active Classes
                        </h3>
                        <span class="status-badge bg-green-100 text-green-800"><%= attendingRooms.length %> classes</span>
                    </div>
                    
                    <div class="space-y-3">
                        <% if (attendingRooms.length === 0) { %>
                            <div class="text-center py-8 text-gray-500">
                                <i class="fas fa-chalkboard-teacher text-3xl mb-2"></i>
                                <p>No active classes</p>
                                <button class="mt-2 bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" 
                                        onclick="location.href='/attendClassroom'">
                                    Attend a Class
                                </button>
                            </div>
                        <% } else { %>
                            <% attendingRooms.forEach(room => { %>
                                <div class="room-card p-3 border rounded-lg hover:border-green-300">
                                    <div class="flex justify-between items-start">
                                        <div class="flex-1">
                                            <h4 class="font-medium text-gray-800">Room <%= room.room_Number %></h4>
                                            <% if (room.booking_time && room.booking_time.from_time && room.booking_time.to_time) { %>
                                                <p class="text-xs text-gray-500 mb-1">
                                                    <i class="far fa-clock mr-1"></i>
                                                    <%= new Date(room.booking_time.from_time).toLocaleString('en-IN', { 
                                                        day: '2-digit', month: '2-digit', year: 'numeric', 
                                                        hour: '2-digit', minute: '2-digit', hour12: true 
                                                    }) %> - 
                                                    <%= new Date(room.booking_time.to_time).toLocaleString('en-IN', { 
                                                        hour: '2-digit', minute: '2-digit', hour12: true 
                                                    }) %>
                                                </p>
                                            <% } %>
                                        </div>
                                        <div class="flex space-x-2">
                                            <button class="text-red-500 hover:text-red-700" 
                                                onclick="freeClassroom('<%= room._id %>')"
                                                title="End Class">
                                                <i class="fas fa-times-circle"></i>
                                            </button>
                                            <button class="text-blue-500 hover:text-blue-700" 
                                                onclick="location.href='/complaint/<%= room._id %>'"
                                                title="Report Issue">
                                                <i class="fas fa-exclamation-circle"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <!-- Quick Actions Footer -->
            <div class="mt-8 bg-white p-5 rounded-lg shadow-sm">
                <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-bolt mr-2 text-yellow-500"></i> Quick Actions
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <button class="bg-blue-500 hover:bg-blue-600 text-white py-3 rounded-lg flex items-center justify-center transition-colors" 
                            onclick="location.href='/Teacher_dashboard'">
                        <i class="fas fa-bookmark mr-2"></i> Book a Room
                    </button>
                    <button class="bg-green-500 hover:bg-green-600 text-white py-3 rounded-lg flex items-center justify-center transition-colors" 
                            onclick="location.href='/attendClassroom'">
                        <i class="fas fa-chalkboard mr-2"></i> Attend Class
                    </button>
                    <button class="bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg flex items-center justify-center transition-colors" 
                            onclick="openScanner()">
                        <i class="fas fa-qrcode mr-2"></i> Scan QR Code
                    </button>
                </div>
            </div>
        </main>
    </div>

    <!-- Scanner Modal -->
    <div id="scannerModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50 scanner-modal">
        <div class="bg-white p-6 rounded-lg shadow-xl w-90 max-w-md">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-bold text-gray-800">Scan QR Code</h3>
                <button onclick="closeScanner()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div id="qr-reader" class="w-full mb-4" style="width: 100%"></div>
            <p class="text-sm text-gray-600 text-center mb-4">
                Point your camera at a room QR code to quickly check in
            </p>
            <button onclick="closeScanner()" class="w-full bg-gray-500 text-white py-2.5 rounded-lg hover:bg-gray-600 transition-colors">
                Cancel
            </button>
        </div>
    </div>

    <!-- QR Code Scanner Library -->
    <script src="https://unpkg.com/html5-qrcode"></script>

    <script>
        async function freeClassroom(roomId) {
            if (confirm("Are you sure you want to end this class?")) {
                try {
                    const response = await fetch("/freeClassroom", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ roomId })
                    });

                    const data = await response.json();
                    if (response.ok) {
                        showNotification('Class ended successfully', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showNotification(data.message || 'Error ending class', 'error');
                    }
                } catch (error) {
                    showNotification('Network error. Please try again.', 'error');
                }
            }
        }

        let html5QrCode;

        function openScanner() {
            document.getElementById("scannerModal").classList.remove("hidden");
            html5QrCode = new Html5Qrcode("qr-reader");
            const config = { fps: 10, qrbox: 250 };

            html5QrCode.start({ facingMode: "environment" }, config, qrCodeMessage => {
                html5QrCode.stop().then(() => {
                    showNotification('QR code scanned successfully!', 'success');
                    window.location.href = qrCodeMessage;
                });
            }).catch(err => {
                console.error("QR Scan Error:", err);
                showNotification('Could not start camera. Please check permissions.', 'error');
            });
        }

        function closeScanner() {
            document.getElementById("scannerModal").classList.add("hidden");
            if (html5QrCode) {
                html5QrCode.stop().then(() => html5QrCode.clear());
            }
        }

        function showNotification(message, type) {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg text-white font-medium z-50 transform transition-transform duration-300 ${
                type === 'success' ? 'bg-green-500' : 'bg-red-500'
            }`;
            notification.textContent = message;
            notification.style.transform = 'translateX(100%)';
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 10);
            
            // Animate out and remove after 3 seconds
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }
    </script>
</body>
</html>